{
  "compilerOptions": {
    // ES2020 문법을 사용할 수 있게 설정 (예: optional chaining, nullish coalescing)
    "target": "ES2020",
    // 최신 ECMAScript 모듈 시스템 사용
    "module": "ESNext",
    // 엄격한 타입 검사 활성화 (null 검사, 암시적 any 타입 방지 등)
    "strict": true,
    // 선언 파일(*.d.ts)의 타입 검사 생략하여 컴파일 속도 향상
    "skipLibCheck": true,
    // 파일 이름의 대소문자 일관성 강제 (대소문자 구분 운영체제 간 문제 방지)
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    // 경로 별칭
    "paths": {
      "@packages/*": ["packages/*"]
    }
  },
  // 컴파일 대상에서 제외할 파일이나 디렉토리 지정
  "exclude": ["node_modules"]

  // 프로젝트 참조 설정 (모노레포 구조에서 다른 패키지 참조)
  // "references": [{ "path": "./packages/ui" }, { "path": "./test" }]
}
